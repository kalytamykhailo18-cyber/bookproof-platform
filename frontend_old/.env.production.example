# ============================================
# BookProof Frontend - PRODUCTION Environment
# ============================================
# COPY THIS FILE TO .env.local AND FILL IN VALUES

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_URL=https://bookproof.app
NEXT_PUBLIC_API_URL=https://api.bookproof.app

# ============================================
# STRIPE (Public Key Only)
# ============================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_FEATURE_SUBSCRIPTIONS=false
NEXT_PUBLIC_FEATURE_KEYWORD_RESEARCH=true
NEXT_PUBLIC_FEATURE_AFFILIATE_PROGRAM=true
NEXT_PUBLIC_FEATURE_AUDIOBOOK=true

# ============================================
# CAPTCHA (Cloudflare Turnstile or reCAPTCHA)
# ============================================
NEXT_PUBLIC_CAPTCHA_SITE_KEY=xxxxx
NEXT_PUBLIC_CAPTCHA_ENABLED=true

# ============================================
# ANALYTICS
# ============================================
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=bookproof.app
# OR
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
