# ============================================
# BookProof Frontend - Environment Variables
# ============================================

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000

# ============================================
# STRIPE (Public Key Only)
# ============================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_FEATURE_SUBSCRIPTIONS=false
NEXT_PUBLIC_FEATURE_KEYWORD_RESEARCH=true
NEXT_PUBLIC_FEATURE_AFFILIATE_PROGRAM=true
NEXT_PUBLIC_FEATURE_AUDIOBOOK=true

# ============================================
# RECAPTCHA (Bot Protection)
# ============================================
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
NEXT_PUBLIC_RECAPTCHA_ENABLED=false

# ============================================
# ANALYTICS (Optional)
# ============================================
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=bookproof.app
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# DEFAULT LOCALE
# ============================================
NEXT_PUBLIC_DEFAULT_LOCALE=en
