# ============================================
# BookProof Backend - PRODUCTION Environment
# ============================================
# COPY THIS FILE TO .env AND FILL IN VALUES

# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
APP_NAME=BookProof
API_URL=https://api.bookproof.com
FRONTEND_URL=https://bookproof.com
PORT=4000

# ============================================
# DATABASE (Neon PostgreSQL)
# ============================================
# Get from: https://neon.tech
DATABASE_URL="postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/bookproof?sslmode=require"
DIRECT_DATABASE_URL="postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/bookproof?sslmode=require"

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate: openssl rand -base64 48
JWT_SECRET=CHANGE_THIS_TO_64_RANDOM_CHARACTERS
JWT_EXPIRES_IN=7d

# ============================================
# ENCRYPTION KEY (for payment details)
# ============================================
# Generate: openssl rand -base64 32
ENCRYPTION_KEY=CHANGE_THIS_TO_32_RANDOM_CHARACTERS

# ============================================
# STRIPE PAYMENTS (LIVE KEYS)
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx

# ============================================
# FILE STORAGE (Cloudflare R2)
# ============================================
# Get from: https://dash.cloudflare.com
R2_ACCESS_KEY_ID=xxxxx
R2_SECRET_ACCESS_KEY=xxxxx
R2_ENDPOINT=https://xxxxx.r2.cloudflarestorage.com
R2_BUCKET=bookproof-files
R2_PUBLIC_BASE_URL=https://files.bookproof.com
R2_REGION=auto

# ============================================
# EMAIL (Resend)
# ============================================
# Get from: https://resend.com
RESEND_API_KEY=re_xxxxx
RESEND_FROM_EMAIL=noreply@bookproof.com
RESEND_FROM_NAME=BookProof

# ============================================
# REDIS (Upstash)
# ============================================
# Get from: https://upstash.com
REDIS_URL=rediss://default:xxxxx@xxxxx.upstash.io:6379
REDIS_TOKEN=xxxxx

# ============================================
# ERROR MONITORING (Sentry)
# ============================================
# Get from: https://sentry.io
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# ============================================
# CAPTCHA (Cloudflare Turnstile or reCAPTCHA)
# ============================================
CAPTCHA_SECRET_KEY=xxxxx

# ============================================
# SECURITY
# ============================================
CORS_ORIGIN=https://bookproof.com,https://www.bookproof.com
CORS_CREDENTIALS=true

# ============================================
# BUSINESS RULES
# ============================================
OVERBOOKING_PERCENTAGE=20
ASSIGNMENT_DEADLINE_HOURS=72
AMAZON_GUARANTEE_DAYS=14
AFFILIATE_COMMISSION_PERCENTAGE=20
MINIMUM_PAYOUT_AMOUNT=50.00

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
